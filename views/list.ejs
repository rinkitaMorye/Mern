<%- include('header'); -%>
<div class="box" id="heading">
        <h1><%=ListTitle%></h1>
        <!-- <h1>Today</h1> -->
    </div>
    <div class="box">
            <form action="/delete" method="post">
                <% taskList.forEach(function(task){ %>
                 <div class="item">
                     <input type="checkbox" name="CheckBox" value="<%=task._id%>" onchange="this.form.submit() "/>
                     <p><%=task.name%></p>
                 </div>
                 <% });%>
                 <input type="hidden" name="deletefromList" value=<%=ListTitle%>>
            </form>
        <form action="/" method="post" class="item">
            <input type="text" name="task" placeholder="Enter your task" autocomplete="off"/>
            <button type="submit" name="listType" value=<%=ListTitle%>>+</button>
        </form>
<%- include('footer'); -%>